@model IEnumerable<Package>

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@item.Image" width="100" height="225" alt="Package Image">
                        <div class="card-body">
                            <p class="card-text">@item.PackageName</p>
                            <p class="card-text">@item.PackageCategory</p>
                            <div class="d-flex justify-content-between align-items-center">
                                @*<div class="btn-group">
                                    <a type="button" class="btn btn-sm btn-outline-info" asp-controller="Package" asp-action="Detail" asp-route-id="@item.Id">
                                        View
                                    </a>
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                    {
                                        <a type="button" class="btn btn-sm btn-outline-info" asp-controller="Package" asp-action="Edit" asp-route-id="@item.Id">
                                            Edit
                                        </a>
                                        <a type="button" class="btn btn-sm btn-outline-danger" asp-controller="Package" asp-action="Delete" asp-route-id="@item.Id">
                                            Delete
                                        </a>
                                    }
                                </div>*@
                                <p>
                                    <div>Status:</div>
                                    <div>
                                        @if (item.Status == 1)
                                        {
                                            <a asp-controller="Package" asp-action="PackageApproval" asp-route-id="@item.Id" class="btn btn-success">Approved</a>
                                        }
                                        else
                                        {
                                            <a asp-controller="Package" asp-action="PackageApproval" asp-route-id="@item.Id" class="btn btn-info">Pending</a>
                                        }
                                    </div>
                                </p>
                                <small class="text-muted">@item.DropDate</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
