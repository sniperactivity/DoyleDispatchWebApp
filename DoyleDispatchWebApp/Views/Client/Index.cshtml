@using DoyleDispatchWebApp.ViewModels
@model List<ClientViewModel>

<section class="flush-with-above">
    <div class="container">
        <div class="row">
            <div class="col">
                <table class="table table-hover align-items-center table-borderless">
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr class="bg-white">
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <img alt="Image profile avatar" height="100" width="100" src="@user.ProfileImageUrl" class="avatar">
                                        <div class="media-body">
                                            <span class="h6 mb-0">@user.Username</span>
                                        </div>
                                    </div>
                                </th>
                                @{
                                    var surname = user.Surname == null ? "Surname?" : user.Surname;
                                    var othernames = user.Othernames == null ? "Othername?" : user.Othernames;
                                }
                                <td>@surname <br /> @othernames </td>
                                <td>
                                    <a class="btn btn-outline-primary" asp-controller="Client" asp-action="Detail" asp-route-id="@user.Id">
                                        View Profile
                                    </a>
                                </td>
                            </tr>
                            <tr class="table-divider">
                                <th></th>
                                <td></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!--end of col-->
        </div>
        <!--end of row-->
    </div>
    <!--end of container-->
</section>
<footer class="footer">
    <div class="container">
        <span class="text-muted"> &copy; 2023 - DoyleDispatchWebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></span>
    </div>
</footer>