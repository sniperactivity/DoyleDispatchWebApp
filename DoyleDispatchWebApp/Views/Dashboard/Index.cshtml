@model DoyleDispatchWebApp.ViewModels.DashboardViewModel

@if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
{
    <h2 class="mt-5">Admin Dashboard</h2>
    <a type="button" class="btn btn-primary" asp-area="" asp-controller="Package" asp-action="Create">New Package</a>
    <a type="button" class="btn btn-primary" asp-area="" asp-controller="Dashboard" asp-action="EditClientProfile">Update Profile</a>
    <div class="album py-5 bg-light">
        <div class="container">
            <h4 class="display-4 fw-normal">Clients Packages</h4>
            <br />
            <div class="row">
                @foreach (var item in Model.packages)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                            <img class="card-img-top" src="@item.Image" width="100" height="225" alt="Package Image">
                            <div class="card-body">
                                <p class="card-text">@item.PackageName</p>
                                <p class="card-text">@item.DropDate</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <p>

                                            <div>
                                                @if (item.Status == 1)
                                                {
                                                    <span class="btn btn-success">Approved</span>
                                                }
                                                else
                                                {
                                                    <span class="btn btn-info">Pending</span>
                                                }
                                            </div>
                                        </p>
                                    </div>
                                    <div class="btn-group">
                                        <a type="btn btn-success" asp-controller="Package" asp-action="Detail" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-secondary">View</a>
                                        <a asp-controller="Package" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <a asp-controller="Package" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                    </div>
                                    <small class="text-muted">@item.PackageCategory</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
else
{
    <h2 class="mt-5">Client Dashboard</h2>
    <a type="button" class="btn btn-primary" asp-area="" asp-controller="Package" asp-action="Create">New Package</a>
    <a type="button" class="btn btn-primary" asp-area="" asp-controller="Dashboard" asp-action="EditClientProfile">Update Profile</a>
    <div class="album py-5 bg-light">
        <div class="container">
            <h4 class="display-4 fw-normal">Your Packages</h4>
            <br />
            <div class="row">
                @foreach (var item in Model.Packages)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                            <img class="card-img-top" src="@item.Image" width="100" height="225" alt="Package Image">
                            <div class="card-body">
                                <p class="card-text">@item.PackageName</p>
                                <p class="card-text">@item.DropDate</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <p>

                                            <div>
                                                @if (item.Status == 1)
                                                {
                                                    <span class="btn btn-success">Approved</span>
                                                }
                                                else
                                                {
                                                    <span class="btn btn-info">Pending</span>
                                                }
                                            </div>
                                        </p>
                                    </div>
                                    <div class="btn-group">
                                        @if (item.Status == 1)
                                        {

                                            <a type="btn btn-success" asp-controller="Package" asp-action="Detail" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-secondary">View</a>
                                        }
                                        else
                                        {
                                            <a type="btn btn-success" asp-controller="Package" asp-action="Detail" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-secondary">View</a>
                                            <a asp-controller="Package" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                            <a asp-controller="Package" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                        }
                                    </div>
                                    <small class="text-muted">@item.PackageCategory</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
<footer class="footer">
    <div class="container">
        <span class="text-muted"> &copy; 2023 - DoyleDispatchWebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></span>
    </div>
</footer>